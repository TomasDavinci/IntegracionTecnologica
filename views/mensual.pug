doctype html
html
    head
        title= title
        script(src="https://cdn.jsdelivr.net/npm/chart.js")
        style.
            body {
                background: #fafafa;
                font-family: 'Roboto', Arial, sans-serif;
                margin: 0;
                padding: 0;
            }
            .charts-container {
                display: flex;
                justify-content: space-around;
                align-items: flex-start;
                height: 220px;
                gap: 24px;
            }
            .md-squares-row {
                display: flex;
                justify-content: space-around;
                margin-bottom: 28px;
                gap: 16px;
            }
            .md-square {
                width: 110px;
                height: 110px;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(60,60,60,0.12), 0 1.5px 4px rgba(60,60,60,0.10);
                margin: 0 8px;
                background: #fff;
                border: none;
                transition: box-shadow 0.2s;
            }
            .md-square span.label {
                font-size: 15px;
                font-weight: 500;
                margin-bottom: 6px;
                letter-spacing: 0.5px;
            }
            .md-square span.value {
                font-size: 28px;
                font-weight: 700;
            }
            .md-square.humidity {
                color: #1976d2;
                background: #e3f2fd;
            }
            .md-square.temperature {
                color: #d32f2f;
                background: #ffebee;
            }
            .md-square.light {
                color: #fbc02d;
                background: #fffde7;
            }
            canvas {
                background: #fff;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(60,60,60,0.10);
                border: none;
            }
            @media (max-width: 800px) {
                .charts-container {
                    flex-direction: column;
                    align-items: center;
                    height: auto;
                    gap: 16px;
                }
                .md-squares-row {
                    flex-direction: column;
                    align-items: center;
                    gap: 16px;
                }
                .md-square {
                    width: 90vw;
                    max-width: 300px;
                    height: 80px;
                }
                canvas {
                    width: 90vw !important;
                    max-width: 300px;
                    height: 180px !important;
                }
            }
            @media (max-width: 500px) {
                .md-square {
                    width: 95vw;
                    max-width: 98vw;
                    height: 60px;
                }
                canvas {
                    width: 95vw !important;
                    max-width: 98vw;
                    height: 120px !important;
                }
            }
    body
        div(class="charts-container")
            canvas(id="humidityChart" width="300" height="200")
            canvas(id="soilHumidityChart" width="300" height="200")
            canvas(id="temperatureChart" width="300" height="200")
